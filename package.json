{
  "name": "test",
  "version": "1.0.0",
  "main": "./dist/server.js",
  "type": "module",
  "scripts": {
    "debug": "ndb server.js",
    "clean": "rm -rf dist",
    "build": "npm run clean && npx tsc",
    "start": "nodemon --exec node --loader ts-node/esm src/server.ts",
    "compose": "trap 'docker-compose down' SIGINT && docker-compose up",
    "dockerize": "docker build -t experiences-server .",
    "container": "cross-env-shell \"docker rm -f experiences-server > /dev/null 2>&1 || true && docker run -it --rm --name experiences-server --env-file ./config.env -p 3000:3000 -v $(pwd)/src:/server/src experiences-server\""
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.4.3",
    "morgan": "^1.10.0",
    "ndb": "^0.2.4",
    "slugify": "^1.6.6",
    "typescript": "^5.4.5",
    "validator": "^13.12.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.5",
    "@types/validator": "^13.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}